{
  "parser"  : "babel-eslint",
  "extends" : [
    "airbnb"
  ],
  "plugins": [
    "babel"
  ],
  "ecmaFeatures": {
      "jsx": true
  },
  "env": {
      "es6": true,
      "node": true
  },
  "rules": {
    "indent": [2, "tab"],
    "react/jsx-indent": [2, "tab"],
    "react/jsx-indent-props": [2, "tab"],
    "semi" : [2, "always"],
    "max-len": [2, 120, 2]
  }
}